<UserControl x:Class="WpfUserControlDemo.Controls.Timer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUserControlDemo.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="160">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="2" MinWidth="30" Name="_ElapsedTimer"></TextBlock>
            <Button Name="btnStartTimer" Click="btnStartTimer_Click">Start Timer</Button>
            <Button  Name="btnStopTimer" Click="btnStopTimer_Click">Stop Timer</Button>
        </StackPanel>
    </Grid>
</UserControl>
