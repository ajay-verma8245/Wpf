<Window x:Class="WpfBusyIndicator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBusyIndicator"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Grid>
        <xctk:WatermarkTextBox x:Name="txtPanel" Height="50" FontSize="22"
                                   Watermark="Please enter Name" Margin="33,25,64,244" />

        <xctk:BusyIndicator x:Name="progressBar" IsBusy="False" Width="120" Height="50">
            <Button x:Name="btnProgrss" Height="50" Width="120"
                    Click="btnProgrss_Click" >Click Me</Button>
        </xctk:BusyIndicator>
    </Grid>

</Window>
